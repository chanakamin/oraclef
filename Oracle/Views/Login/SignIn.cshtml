                <button id="user" class="btn-default" type="button" ng-click="direct('Recipe')"><span class="glyphicon glyphicon-user"></span> {{words.user}}</button>
            </div>
            <div class="col-xs-12">
                <label class="sr-only" for="manager">Manager</label>
                <button id="manager" class="btn-default" type="button" ng-click="direct('Manager')"><span class="glyphicon glyphicon-king" {{words.manager}}</button>
