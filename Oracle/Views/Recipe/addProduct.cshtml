@model Oracle.Models.product

<form name="addProduct" id="addProduct" ng-submit="SubmitProduct()" class="form-group" novalidate="novalidate">
    <div class="input-group-sm">
        <label for="Product Name" class="sr-only">Product Name</label>
        <input id="ProductName" name="name" type="text" ng-model="product.name" class="form-control" placeholder="Product Name" aria-labelledby="Product Name" required="required"/>
        <span ng-if="addProduct.name.$error.required && addProduct.$submitted">{{::error.required}}</span>
    </div>
    <div class="input-group-sm">
        <label for="Description" class="sr-only">Description</label>
        <input  id="productDescription" ng-model="product.description"  type="text" name="description" class="form-control" placeholder="Description" aria-labelledby="Description" required="required" />
        <span ng-if="addProduct.description.$error.required && addProduct.$submitted">{{::error.required}}</span>
    </div>
     <div class="input-group-sm">
        <label for="mgWeight" class="sr-only">Milligram Weight</label>
        <input id="mgWeight" type="number" class="form-control" placeholder="Milligram Weight" step="0.01" ng-model="product.weight_in_volume" aria-labelledby="Milligram Weight" required="required" name="mgWeight"/>
         <span ng-if="addProduct.mgWeight.$error.required && addProduct.$submitted">{{::error.required}}</span>
    </div>
    <div class="input-group-sm">
        <label for="unit_ampount" class="sr-only">Unit Weight</label>
        <input id="unit_amount" name="unit_amount" type="number" class="form-control" placeholder="unit weight" step="0.01" ng-model="product.unit_amount" aria-labelledby="Unit Weight" />
        <span ng-if="addProduct.unit_amount.$error.required && addProduct.$submitted">{{::error.required}}</span>
        </div>
    <div class="input-group-sm col-xs-10">
        <label for="mgWeight" class="sr-only"> Measurement type</label>
        <select name="mtype" ng-required="reuired" required="required" class="form-control" ng-model="product.nutritional_per" default-option="select measurement type" ng-options="type.id as type.measure_type1 for type in measureTypes"  ></select>
        <span ng-if="addProduct.mtype.$viewValue < 1 && addProduct.$submitted">{{::error.required}}</span>
    </div>
    <div class="input-group-sm">
        <input type="submit" value="Create" class="form-controll" />
    </div>
    <label for="NutritionalValue" class=" sr-only">Nutritional Value</label>
    <div id="NutritionalValue" aria-labelledby="Nutritional Value" class="table-responsive col-xs-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nutritional</th>
                    <th>Vlaue Per 100</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="nut in product.mustNutrition">
                    <td>{{ nut.name }}({{ nut.alias }} ):</td>
                    <td>
                        <div class="input-group-sm">
                            <input type="number" step="0.1" ng-model="nut.amount" class="form-control" aria-labelledby="Servings" />
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>    
</form>
<div class=" container-fluid">
    <div class="modal fade" id="mdlSubmit" tabindex="-1" role="dialog" data-keyboard="true" aria-labelledby="mdlSubmitLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="mdlSubmitLabel">Are you sure you're ready to submit this Product?</h3>
                </div>
                <div class="modal-body">
                    <h4>When you submit this product our team will examine it carefully before allowing it to appear in the sited recipes.</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">I need to change something</button>
                    <button type="button" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>