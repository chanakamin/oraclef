<div class="row">
    <!--the bottom bar-->
    <div class="col-xs-12">
        <nav class="navbar navbar-inverse navbar-fixed-bottom">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-toggle collapsed" data-toggle="collapse" data-target="#recipeNavbar" aria-expanded="false">
