<ng-form class ="form-group" name="recipe_product">
    <div class="input-group-sm col-xs-4">              
        <label for="Ingredient" class="sr-only">Ingredient</label>
        <select id="Ingredient" name="ingrediant" class="form-control"  ng-options="product.id as product.name for product in Products" default-option="Ingredient" ng-model="productRecipe.product_id" placeholder="Ingredient" aria-labelledby="Ingredient"></select>
        <span ng-if="!recipe_product.ingrediant.$viewValue  && recipe_product.$submitted">{{::error.select}}</span>
    </div>
    <div class="input-group-sm col-xs-4">
        <label for="Measurement" class="sr-only">Measurement</label>
        <select id="Measurement" name="measurement" class="form-control" ng-model="productRecipe.measurements_id" default-option="Select Measurement" ng-options="measurement.id as measurement.name for measurement in Measurements" placeholder="Measurement" aria-labelledby="Measurement" />
        <span ng-if="!recipe_product.measurement.$viewValue && recipe_product.$submitted">{{::error.select}}</span>
    </div>
    <div class="input-group-sm col-xs-2">
        <label for="Amount" class="sr-only">Amount</label>
        <input id="Amount" name="amount" type="number" min="0" step="0.1" ng-model="productRecipe.amount" class="form-control" aria-labelledby="Amount" required="required"/>
        <span ng-if="recipe_product.amount.$error.required && recipe_product.$submitted">{{::error.required}}</span>
    </div>  
    <button ng-if="add" type="button" ng-click="submit()" class="btn btn-default col-xs-2"><span class="glyphicon glyphicon-plus"></span></button>  
    <button ng-if="!add" type="button" ng-click="submit()" class="btn btn-default col-xs-2"><span class="glyphicon glyphicon-minus"></span></button>    
</ng-form>
      