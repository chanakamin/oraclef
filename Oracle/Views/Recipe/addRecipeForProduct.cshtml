<ng-form class ="form-group">
    <div class="input-group-sm col-xs-4">              
        <label for="Ingredient" class="sr-only">Ingredient</label>
        <select id="Ingredient" class="form-control"  ng-options="product.id as product.name for product in Products" default-option="Ingredient" ng-model="productRecipe.product_id" placeholder="Ingredient" aria-labelledby="Ingredient"></select>
    </div>
    <div class="input-group-sm col-xs-4">
        <label for="Measurement" class="sr-only">Measurement</label>
        <select id="Measurement" class="form-control" ng-model="productRecipe.measurements_id" default-option="Select Measurement" ng-options="measurement.id as measurement.name for measurement in Measurements" placeholder="Measurement" aria-labelledby="Measurement" />
    </div>
    <div class="input-group-sm col-xs-2">
        <label for="Amount" class="sr-only">Amount</label>
        <input id="Amount" type="number" min="0" step="0.1" ng-model="productRecipe.amount" class="form-control" placeholder="Amount" aria-labelledby="Amount" />
    </div>  
    <button ng-if="add" type="button" ng-click="submit()" class="btn btn-default col-xs-2"><span class="glyphicon glyphicon-plus"></span></button>  
    <button ng-if="!add" type="button" ng-click="submit()" class="btn btn-default col-xs-2"><span class="glyphicon glyphicon-minus"></span></button>    
</ng-form>
      